<h1>Sign Up</h1>
<%= form_for @user do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br />
  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br />
  <%= f.label :email , "Email" %>
  <%= f.text_field :email %><br />
  <%= f.label :username %>
  <%= f.text_field :username %><br />
  <%= f.label :password %>
  <%= f.password_field :password %><br />
  <p>Check box if you are a hostel owner <%= f.check_box :admin, options = {:class => "user_admin"} %></p><br />
  <br />
  <%= f.submit %>
<% end %>
